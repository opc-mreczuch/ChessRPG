<Page
    x:Class="ChessRPG.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChessRPG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" Height="686">
            <Button Content="SinglePlayer" Click="NewGame_Click" Height="100" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="MultiPlayer" Click="LoadGame_Click" Height="100" Width="200" HorizontalAlignment="Center"/>
            <Button Content="Ustawienia" Click="LoadGame_Click" Height="100" Width="200" HorizontalAlignment="Center"/>
            <Button Content="Wyjdź" Click="LoadGame_Click" Height="100" Width="200" HorizontalAlignment="Center"/>
            <!-- Dodaj inne przyciski i elementy menu -->
        </StackPanel>
    </Grid>
</Page>